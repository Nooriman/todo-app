{
  "name": "todo-app",
  "version": "1.0.0",
  "description": "React Todo App",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "install": "npm run setup",
    "install:client": "cd src/client && npm install",
    "install:server": "cd src/server && npm install",
    "start": "concurrently \"npm run start:client\" \"npm run start:server\" ",
    "start:client": "cd src/client && npm start",
    "start:server": "cd src/server && npm start",
    "build": "concurrently \"npm run build:client\" \"npm run build:server\" ",
    "build:client": "cd src/client && npm build",
    "build:server": "cd src/server && npm build"
    
  },
  "author": "Nooriman Noor",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^8.2.1"
  }
}
